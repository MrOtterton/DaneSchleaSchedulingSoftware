<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="800.0" style="-fx-background-color: #2e2b61;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View_Controller.CustomersController">
   <children>
      <TableView fx:id="custView" layoutY="100.0" prefHeight="238.0" prefWidth="800.0" style="-fx-background-color: #d0cfe4;">
        <columns>
          <TableColumn fx:id="custNameView" editable="false" prefWidth="150.0" style="-fx-background-color: #6f8bb1; -fx-border-color: black;" text="Customer Name" />
            <TableColumn fx:id="custPhoneView" editable="false" prefWidth="100.0" style="-fx-background-color: #6f8bb1; -fx-border-color: black;" text="Phone Number" />
            <TableColumn fx:id="custAddView" editable="false" prefWidth="148.0" style="-fx-background-color: #6f8bb1; -fx-border-color: black;" text="Address" />
            <TableColumn fx:id="custAddTwoView" editable="false" prefWidth="85.0" style="-fx-background-color: #6f8bb1; -fx-border-color: black;" text="Address 2" />
            <TableColumn fx:id="custCityView" editable="false" prefWidth="110.0" style="-fx-background-color: #6f8bb1; -fx-border-color: black;" text="City" />
            <TableColumn fx:id="custPostalView" editable="false" prefWidth="119.0" style="-fx-background-color: #6f8bb1; -fx-border-color: black;" text="Postal Code" />
            <TableColumn fx:id="custCountryView" editable="false" prefWidth="87.0" style="-fx-background-color: #6f8bb1; -fx-border-color: black;" text="Country" />
        </columns>
      </TableView>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#3f3d57" height="50.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="800.0" />
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#3f3d57" height="50.0" layoutY="350.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="800.0" />
      <Button fx:id="custClose" layoutX="712.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleCustomersCancel" prefHeight="31.0" prefWidth="62.0" text="Close" />
      <Label fx:id="labelCustomers" layoutX="14.0" layoutY="13.0" text="Customers" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Button fx:id="custAdd" layoutX="598.0" layoutY="64.0" mnemonicParsing="false" onAction="#addCustomerHandler" prefHeight="25.0" prefWidth="55.0" text="Add" />
      <Button fx:id="custUpdate" layoutX="660.0" layoutY="64.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="55.0" text="Update" />
      <Button fx:id="custDelete" layoutX="722.0" layoutY="64.0" mnemonicParsing="false" onAction="#deleteCustomerHandler" prefHeight="25.0" prefWidth="55.0" text="Delete" />
   </children>
</AnchorPane>
